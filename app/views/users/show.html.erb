<h1>User Info:</h1>

<ul>
<li id="author"> Username: <a href=""><%= @user.uname %></a> </li>
<li id="title"> First Name: <%= @user.fname %> </li>
<li id="content"> Last Name: <%= @user.lname %> </li>
<%= link_to("Delete", user_path(@user), method: :destroy)%>
<%= link_to "Edit", edit_user_path(@user)%>
</ul>

<h2>User Posts:</h2>
<ul>
<% @posts.each do |post| %>
<li id="title"> Title: <%= post.title %> </li>
<li id="content"> Content: <%= post.content %> </li>

<% end %>
</ul>
